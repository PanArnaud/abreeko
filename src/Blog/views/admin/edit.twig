{% extends '@admin/layout.twig' %}

{% block title "Edit post" %}

{% block body %}

  <h1>Edit post: {{ item.name }}</h1>

  <form action="{{ path('blog.admin.edit', {id: item.id}) }}" method="POST">
    {% include '@blog/admin/form.twig' %}
    <button class="btn btn-primary" type="submit">Save</button>
  </form>
{% endblock %}